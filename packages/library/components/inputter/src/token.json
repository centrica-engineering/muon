{
  "inputter": {
    "type": {
      "value": "standard"
    },
    "@": {
      "color": {
        "value": "{ theme.color.neutral.dark.100.value }"
      },
      "background": {
        "color": {
          "value": "{ theme.color.lightest.value }"
        }
      },
      "border": {
        "color": {
          "value": "{ theme.color.neutral.dark.150.value }"
        }
      }
    },
    "placeholder": {
      "color": {
        "value": "{ theme.color.neutral.light.300.value }"
      }
    },
    "outline": {
      "color": {
        "value": "{ theme.color.focus.value }"
      }
    },
    "disabled": {
      "border": {
        "color": {
          "value": "{ theme.color.neutral.light.100.value }"
        }
      },
      "background": {
        "color": {
          "value": "{ theme.color.neutral.light.50.value }"
        }
      },
      "placeholder": {
        "color": {
          "value": "{ theme.color.neutral.light.100.value }"
        }
      }
    },
    "validation": {
      "info": {
        "color": {
          "value": "{ theme.color.information.@.value }"
        }
      },
      "warning": {
        "icon": {
          "value": "exclamation-triangle"
        },
        "colour": {
          "value": "{ theme.color.focus.value }"
        }
      }
    },
    "label": {
      "color": {
        "value": "{ theme.color.neutral.dark.100.value }"
      }
    },
    "detail": {
      "@": {
        "color": {
          "value": "{ theme.color.neutral.dark.200.value }"
        }
      },
      "toggle": {
        "open": {
          "value": "chevron-down"
        },
        "close": {
          "value": "chevron-up"
        },
        "position": {
          "value": "end"
        }
      },
      "hover": {
        "color": {
          "value": "{ theme.color.darkest.value }"
        }
      },
      "focus": {
        "color": {
          "value": "{ theme.color.darkest.value }"
        },
        "outline": {
          "color": {
            "value": "{ theme.color.focus.value }"
          }
        }
      }
    }
  }
}

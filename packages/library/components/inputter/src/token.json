{
  "inputter": {
    "type": {
      "@": {
        "description":"Multi-purpose wrapper component that helps users enter and select information within a form."
        "value": "standard"
      }
    },
    "field": {
      "color": {
        "description":"Text color for the field. Defualts to dark."
        "value": "{ theme.color.text.dark.value }"
      },
      "background": {
        "color": {
          "description":"Base background color for the inputter field. Defaults to lightest color."
          "value": "{ theme.color.base.background.value }"
        }
      },
      "font": {
        "family": {
          "description":"The font family used for inputter field. Defaults to sans-serif."
          "value": "{ theme.font.family.default.value }"
        },
        "size": {
          "description":"The font size used for inputter field."
          "value": "{ theme.font.size.default.value }"
        }
      },
      "padding": {
        "block": {
          "description":"Padding space above and below the inputter field text. Equal values in the block axis."
          "value": "{ theme.spacer.sm.value }"
        },
        "inline": {
          "description":"Padding space left and right of the inputter field text. Equal values in the inline axis."
          "value": "{ inputter.field.padding.block.value }"
        }
      },
      "margin": {
        "block": {
          "description":"Margin space that surrounds the inputter field."
          "value": "{ theme.spacer.sm.value }"
        }
      },
      "border": {
        "color": {
          "description":"Border color of the inputter field."
          "value": "{ inputter.field.color.value }"
        }
      },
      "icon": {
        "size": {
          "description":"Size of an icon used within the inputter field."
          "value": "{ theme.size.sm.value }"
        },
        "spacer": {
          "description":"Padding space aroudn the icon used within the inputter field."
          "value": "calc({ inputter.field.padding.block.value } + { inputter.field.icon.size.value } + { inputter.field.padding.block.value })"
        }
      },
      "date": {
        "icon": {
          "description":"Icon used to open a calendar from the inputter field."
          "value": "calendar"
        }
      },
      "select": {
        "icon": {
          "description":"Icon used to open a drop-down selection from the inputter field."
          "value": "chevron-circle-down"
        }
      },
      "search": {
        "icon": {
          "description":"Icon used to perform a search for data entered in the inputter field."
          "value": "search"
        }
      }
    },
    "multiple": {
      "background": {
        "color": {
          "description":"Write"
          "value": "{ inputter.field.background.color.value }"
        }
      },
      "gap": {
        "description":"Write"  
        "value": "0.5em"
      },
      "size": {
        "description":"Write"
        "value": "1em"
      },
      "border": {
        "color": {
          "description":"Write"
          "value": "{ inputter.field.color.value }"
        }
      }
    },
    "label": {
      "color": {
        "description":"Write"
        "value": "{ inputter.field.color.value }"
      }
    },
    "placeholder": {
      "color": {
        "description":"Write"
        "value": "{ theme.color.placeholder.value }"
      }
    },
    "mask": {
      "color": {
        "description":"Write"
        "value": "{ theme.color.darkest.value }",
        "modify": [{
          "type": "brighten",
          "amount": 2.75
        }]
      },
      "font": {
        "family": {
          "description":"Write"
          "value": "Courier New, Courier, { theme.font.family.monospace.value }"
        },
        "weight": {
          "description":"Write"
          "value": "{ theme.font.weight.heading.value }"
        }
      }
    },
    "hover": {
      "color": {
        "description":"Write"
        "value": "{ inputter.field.color.value }",
        "modify": [{
          "type": "darken",
          "amount": 1.5
        }]
      },
      "border": {
        "color": {
          "description":"Write"
          "value": "{ inputter.hover.color.value }"
        }
      }
    },
    "focus": {
      "color": {
        "description":"Write"
        "value": "{ inputter.hover.color.value }"
      },
      "border": {
        "color": {
          "description":"Write"
          "value": "{ inputter.focus.color.value }"
        }
      },
      "outline": {
        "color": {
          "description":"Write"
          "value": "{ theme.color.focus.value }"
        }
      }
    },
    "disabled": {
      "color": {
        "description":"Write"
        "value": "{ theme.color.disabled.value }"
      },
      "border": {
        "color": {
          "description":"Write"
          "value": "{ inputter.disabled.color.value }"
        }
      },
      "background": {
        "color": {
          "description":"Write"
          "value": "{ inputter.disabled.color.value }",
          "modify": [{
            "type": "brighten",
            "amount": 1
          }]
        }
      },
      "placeholder": {
        "color": {
          "description":"Write"
          "value": "{ inputter.disabled.color.value }"
        }
      }
    },
    "validation": {
      "margin": {
        "block": {
          "description":"Write"
          "value": "{ theme.spacer.sm.value }"
        }
      },
      "gap": {
        "description":"Write"
        "value": "{ theme.spacer.sm.value }"
      },
      "icon": {
        "size": {
          "description":"Write"
          "value": "{ theme.size.sm.value }"
        }
      },
      "warning": {
        "color": {
          "description":"Write"
          "value": "{ theme.color.warning.@.value }"
        },
        "icon": {
          "description":"Write"
          "value": "exclamation-circle"
        }
      }
    },
    "detail": {
      "color": {
        "description":"Write"
        "value": "{ inputter.field.color.value }"
      },
      "hover": {
        "color": {
          "description":"Write"
          "value": "{ inputter.hover.color.value }"
        }
      },
      "heading": {
        "margin": {
          "block": {
            "description":"Write"
            "value": "{ theme.spacer.sm.value }"
          }
        },
        "gap": {
          "description":"Write"
          "value": "{ theme.spacer.sm.value }"
        }
      },
      "content": {
        "margin": {
          "block": {
            "description":"Write"
            "value": "{ theme.spacer.sm.value }"
          }
        },
        "padding": {
          "inline": {
            "description":"Write"
            "value": "{ theme.spacer.sm.value }"
          }
        }
      },
      "icon": {
        "size": {
          "description":"Write"
          "value": "{ theme.size.sm.value }"
        }
      },
      "toggle": {
        "open": {
          "description":"Write"
          "value": "chevron-circle-down"
        },
        "close": {
          "description":"Write"
          "value": "chevron-circle-up"
        },
        "position": {
          "description":"Write"
          "value": "start"
        }
      },
      "focus": {
        "outline": {
          "color": {
            "description":"Write"
            "value": "{ inputter.focus.outline.color.value }"
          }
        }
      },
      "border": {
        "color": {
          "description":"Write"
          "value": "{ inputter.field.color.value }",
          "modify": [{
            "type": "brighten",
            "amount": 3
          }]
        }
      }
    }
  }
}

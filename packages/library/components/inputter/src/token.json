{
  "inputter": {
    "type": {
      "@": {
        "value": "standard"
      },
      "date": {
        "icon": {
          "value": "calendar"
        }
      },
      "select": {
        "icon": {
          "value": "chevron-circle-down"
        }
      },
      "search": {
        "icon": {
          "value": "search"
        }
      }
    },
    "color": {
      "value": "{ theme.color.text.dark.value }"
    },
    "background": {
      "color": {
        "value": "{ theme.color.base.background.value }"
      }
    },
    "label": {
      "color": {
        "value": "{ inputter.color.value }"
      }
    },
    "border": {
      "color": {
        "value": "{ inputter.color.value }"
      }
    },
    "placeholder": {
      "color": {
        "value": "{ theme.color.placeholder.value }"
      }
    },
    "focus": {
      "color": {
        "value": "{ theme.color.focus.value }"
      }
    },
    "disabled": {
      "color": {
        "value": "{ theme.color.disabled.value }"
      },
      "border": {
        "color": {
          "value": "{ inputter.disabled.color.value }"
        }
      },
      "background": {
        "color": {
          "value": "{ inputter.disabled.color.value }",
          "modify": [{
            "type": "brighten",
            "amount": 1
          }]
        }
      }
    },
    "validation": {
      "warning": {
        "color": {
          "value": "{ theme.color.warning.@.value }"
        },
        "icon": {
          "value": "exclamation-circle"
        }
      }
    },
    "detail": {
      "color": {
        "value": "{ inputter.color.value }"
      },
      "toggle": {
        "open": {
          "value": "chevron-circle-down"
        },
        "close": {
          "value": "chevron-circle-up"
        },
        "position": {
          "value": "start"
        }
      },
      "focus": {
        "outline": {
          "color": {
            "value": "{ inputter.focus.color.value }"
          }
        }
      },
      "border": {
        "color": {
          "value": "{ inputter.color.value }",
          "modify": [{
            "type": "brighten",
            "amount": 4
          }]
        }
      }
    }
  }
}

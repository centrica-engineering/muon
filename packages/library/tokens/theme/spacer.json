{
  "theme": {
    "spacer": {
      "description": "A spacer is the invisible space between elements. The unit is supplied by the size transform (default rem).",
      "zero": {
        "description": "No space at all.",
        "value": "0",
        "attributes": {
          "category": "size"
        }
      },
      "sm": {
        "description": "Size for a small space.",
        "value": "0.5",
        "attributes": {
          "category": "size"
        }
      },
      "md": {
        "description": "Size for a medium space.",
        "value": "1",
        "attributes": {
          "category": "size"
        }
      },
      "lg": {
        "description": "Size for a large space.",
        "value": "1.5",
        "attributes": {
          "category": "size"
        }
      },
      "xl": {
        "description": "Size for a extra large space.",
        "value": "2",
        "attributes": {
          "category": "size"
        }
      },
      "negative": {
        "description": "A negative spacer pulls.",
        "sm": {
          "description": "A negative version of the small space.",
          "value": "-{ theme.spacer.sm.value }",
          "attributes": {
            "category": "size"
          }
        },
        "md": {
          "description": "A negative version of the medium space.",
          "value": "-{ theme.spacer.md.value }",
          "attributes": {
            "category": "size"
          }
        },
        "lg": {
          "description": "A negative version of the large space.",
          "value": "-{ theme.spacer.lg.value }",
          "attributes": {
            "category": "size"
          }
        },
        "xl": {
          "description": "A negative version of the extra large space.",
          "value": "-{ theme.spacer.xl.value }",
          "attributes": {
            "category": "size"
          }
        }
      }
    }
  }
}

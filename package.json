{
  "name": "@muons/root",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "start-storybook",
    "build": "build-storybook",
    "test": "percy storybook:start",
    "styles": "muon-build-styles",
    "tes": "muon-build-styles && npm run test --workspace=@muons/library",
    "test:watch": "muon-build-styles && npm run test --workspace=@muons/library -- --watch",
    "test:snapshots": "muon-build-styles && npm run test --workspace=@muons/library -- --update-snapshots",
    "test:browserstack": "muon-build-styles && npm run test:browserstack --workspace=@muons/library",
    "dev": "muon-serve",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint:css": "stylelint '**/*.css'",
    "lint:js:fix": "eslint 'packages/**/*.js' --fix",
    "lint:js": "eslint 'packages/**/*.js'",
    "lint": "run-p lint:*",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@percy/cli": "^1.0.0-beta.74",
    "@percy/storybook": "^4.1.0",
    "@storybook/react": "6.5.0-alpha.23",
    "@web/dev-server": "^0.1.14",
    "@web/dev-server-rollup": "^0.3.3",
    "@web/dev-server-storybook": "^0.4.1",
    "@web/storybook-prebuilt": "^0.1.33",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "standard-version": "^9.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0"
  }
}

{
  "name": "@muonic/root",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "styles": "muon-build-styles",
    "cypress": "cypress",
    "test": "muon-build-styles && npm run test --workspace=@muonic/muon",
    "test:watch": "muon-build-styles && npm run test --workspace=@muonic/muon -- --watch",
    "test:axe": "npm run build && axe-storybook",
    "test:snapshots": "muon-build-styles && npm run test --workspace=@muonic/muon -- --update-snapshots",
    "test:browserstack": "muon-build-styles && npm run test:browserstack --workspace=@muonic/muon",
    "test:cypress": "start-server-and-test 'npm run dev --no-open' 8000 cypress",
    "test:cypress:open": "start-server-and-test 'npm run dev --no-open' 8000 'npm run cypress -- open'",
    "test:cypress:local": "start-server-and-test 'npm run dev --no-open' 8000 'npm run cypress -- run --browser chrome --spec \"**/*.feature\" --env allure=true'",
    "test:cypress:browserstack": "start-server-and-test 'npm run dev --no-open' 8000 'browserstack-cypress run'",
    "test:allure:report": "allure generate allure-results --clean -o allure-report && allure open  allure-report",
    "test:cypress:run": "npm run test:cypress:local && npm run test:allure:report",
    "test:cypress:tag": "start-server-and-test 'npm run dev --no-open' 8000 './node_modules/.bin/cypress-tags run -e TAGS='@inputter' --browser chrome'",
    "test:percy": "start-server-and-test 'npm run dev --no-open' 8000 'percy storybook http://localhost:8000'",
    "test:percy:custom": "start-server-and-test 'npm run dev --no-open' 8000 'percy snapshot snapshots.yml'",
    "open:ember": "cd examples/ember-app && npm install && npm run build-muon && ember serve",
    "test:ember:percy": "start-server-and-test 'npm run open:ember' 4200 'percy exec ./node_modules/.bin/cypress-tags run -e TAGS='@cake' --browser chrome'",
    "test:ember": "start-server-and-test 'npm run open:ember' 4200 './node_modules/.bin/cypress-tags run -e TAGS='@cake' --browser chrome'",
    "dev": "muon-serve",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint:css": "stylelint '**/*.css'",
    "lint:js:fix": "eslint 'packages/**/*.js' --fix",
    "lint:js": "eslint 'packages/**/*.js'",
    "lint": "run-p lint:*",
    "build": "muon-build-storybook",
    "prepare": "husky install",
    "release": "npm run release --workspace=@muonic/muon",
    "release:alpha": "npm run release --workspace=@muonic/muon -- --prerelease alpha",
    "release:beta": "npm run release --workspace=@muonic/muon -- --prerelease beta"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@chanzuckerberg/axe-storybook-testing": "^5.0.0",
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@percy/cli": "^1.0.0-beta.74",
    "@percy/cypress": "^3.1.1",
    "@percy/storybook": "^4.1.0",
    "@shelex/cypress-allure-plugin": "^2.23.0",
    "@testing-library/cypress": "^8.0.2",
    "@web/dev-server": "0.1.31",
    "@web/dev-server-rollup": "0.3.17",
    "@web/dev-server-storybook": "0.5.1",
    "@web/storybook-prebuilt": "0.1.34",
    "allure-commandline": "^2.17.2",
    "browserstack-cypress-cli": "^1.11.2",
    "chromatic": "6.5.6",
    "cypress": "^10.0.0",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "cypress-tags": "^0.3.0",
    "eslint": "8.17.0",
    "eslint-plugin-jsdoc": "^39.0.0",
    "husky": "8.0.1",
    "npm-run-all": "4.1.5",
    "standard-version": "9.5.0",
    "start-server-and-test": "^1.14.0",
    "stylelint": "14.9.0",
    "stylelint-config-standard": "26.0.0"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  }
}

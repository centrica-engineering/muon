{
  "name": "@muons/root",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "styles": "muon-build-styles",
    "cypress": "cypress",
    "test": "muon-build-styles && npm run test --workspace=@muons/library",
    "test:watch": "muon-build-styles && npm run test --workspace=@muons/library -- --watch",
    "test:snapshots": "muon-build-styles && npm run test --workspace=@muons/library -- --update-snapshots",
    "test:browserstack": "muon-build-styles && npm run test:browserstack --workspace=@muons/library",
    "test:cypress": "start-server-and-test 'npm run dev --no-open' 8001 cypress",
    "test:cypress:open": "start-server-and-test 'npm run dev --no-open' 8001 'npm run cypress -- open'",
    "test:cypress:local": "start-server-and-test 'npm run dev --no-open' 8001 'npm run cypress -- run --browser chrome --spec \"**/*.feature\" --env allure=true'",
    "test:cypress:browserstack": "start-server-and-test 'npm run dev --no-open' 8001 'browserstack-cypress run'",
    "test:allure:report": "allure generate allure-results --clean -o allure-report && allure open  allure-report",
    "test:cypress:run": "npm run test:cypress:local && npm run test:allure:report",
    "dev": "muon-serve",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint:css": "stylelint '**/*.css'",
    "lint:js:fix": "eslint 'packages/**/*.js' --fix",
    "lint:js": "eslint 'packages/**/*.js'",
    "lint": "run-p lint:*",
    "build": "muon-build-storybook",
    "prepare": "husky install",
    "release": "npm run release --workspace=@muons/library",
    "release:alpha": "npm run release --workspace=@muons/library -- --prerelease alpha",
    "release:beta": "npm run release --workspace=@muons/library -- --prerelease beta"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "16.1.0",
    "@commitlint/config-conventional": "16.0.0",
    "@shelex/cypress-allure-plugin": "^2.23.0",
    "browserstack-cypress-cli": "^1.11.2",
    "@web/dev-server": "0.1.29",
    "@web/dev-server-rollup": "0.3.15",
    "@web/dev-server-storybook": "0.4.2",
    "@web/storybook-prebuilt": "0.1.33",
    "allure-commandline": "^2.17.2",
    "chromatic": "6.4.3",
    "cypress": "^9.1.1",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "start-server-and-test": "^1.14.0",
    "eslint": "8.8.0",
    "eslint-plugin-jsdoc": "^37.6.3",
    "husky": "7.0.4",
    "npm-run-all": "4.1.5",
    "standard-version": "9.3.2",
    "stylelint": "14.3.0",
    "stylelint-config-standard": "24.0.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  }
}

{
  "name": "@muons/root",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "styles": "muon-build-styles",
    "cypress": "cypress",
    "test": "muon-build-styles && npm run test --workspace=@muons/library",
    "test:watch": "muon-build-styles && npm run test --workspace=@muons/library -- --watch",
    "test:snapshots": "muon-build-styles && npm run test --workspace=@muons/library -- --update-snapshots",
    "test:browserstack": "muon-build-styles && npm run test:browserstack --workspace=@muons/library",
    "test:cypress": "start-server-and-test 'npm run dev --no-open' 8000 cypress",
    "test:cypress:open": "start-server-and-test 'npm run dev --no-open' 8000 'npm run cypress -- open'",
    "test:cypress:bdd": "start-server-and-test 'npm run dev --no-open' 8000 'npm run cypress -- run --spec \"**/*.feature\" --env allure=true'",
    "test:allure:report": "allure generate allure-results --clean -o allure-report && allure open  allure-report",
    "test:cypress:run": "npm run test:cypress:bdd && npm run test:allure:report",
    "dev": "muon-serve",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint:css": "stylelint '**/*.css'",
    "lint:js:fix": "eslint 'packages/**/*.js' --fix",
    "lint:js": "eslint 'packages/**/*.js'",
    "lint": "run-p lint:*",
    "build": "muon-build-storybook",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@shelex/cypress-allure-plugin": "^2.23.0",
    "@web/dev-server": "^0.1.14",
    "@web/dev-server-rollup": "^0.3.3",
    "@web/dev-server-storybook": "^0.3.5",
    "@web/storybook-prebuilt": "^0.1.20",
    "allure-commandline": "^2.17.2",
    "chromatic": "6.3.4",
    "cypress": "^9.1.1",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "start-server-and-test": "^1.14.0",
    "eslint": "8.7.0",
    "eslint-plugin-jsdoc": "^37.6.3",
    "husky": "7.0.4",
    "npm-run-all": "4.1.5",
    "standard-version": "9.3.2",
    "stylelint": "14.2.0",
    "stylelint-config-standard": "24.0.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  }
}

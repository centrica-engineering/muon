<h2>Personal details</h2>

<muon-inputter {{on "inputter-change" updateTitle}}>
  <label slot="label">Title</label>
  <input autocomplete="honorific-prefix" type="text" value={{@contact.title}}>
</muon-inputter>

<muon-inputter validation="[&quot;isRequired&quot;,&quot;isFirstName&quot;]" {{on "inputter-change" updateFirstname}}>
  <label slot="label">First name</label>
  <input autocomplete="given-name" type="text" value={{@contact.firstname}}>
</muon-inputter>

<muon-inputter validation="[&quot;isRequired&quot;,&quot;isLastName&quot;]" {{on "inputter-change" updateLastname}}>
  <label slot="label">Surname</label>
  <input autocomplete="family-name" type="text" value={{@contact.lastname}}>
</muon-inputter>

<muon-inputter validation="[&quot;isRequired&quot;,&quot;isEmail&quot;]" {{on "inputter-change" updateEmail}}>
  <label slot="label">Email</label>
  <input autocomplete="email" type="email" placeholder="e.g. yummy@cake-config.co.uk" value={{@contact.email}}>
</muon-inputter>

<muon-inputter mask="000-000-0000" separator="-" validation="[&quot;isRequired&quot;]" {{on "inputter-change" updatePhone}}>
  <label slot="label">Phone</label>
  <input autocomplete="email" type="email" value={{@contact.phone}}>
</muon-inputter>
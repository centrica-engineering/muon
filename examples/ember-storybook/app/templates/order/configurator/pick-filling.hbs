{{page-title "PickFilling"}}

  <muon-inputter heading="What fillings?" validation="[&quot;isRequired&quot;]" oninput={{action "updateFilling"}}>

    {{#each this.model.fillings as |filling index|}}
      {{#if (includes filling this.model.cake.filling )}}
        <input type="checkbox" name="filling" value={{filling}} id={{(concat "filling-" index)}} checked>
      {{else}}
        <input type="checkbox" name="filling" value={{filling}} id={{(concat "filling-" index)}}> 
      {{/if}}
      <label for={{(concat "filling-" index)}}>{{filling}}</label>
    {{/each}}
  </muon-inputter>

  <LinkTo @route="order.configurator.pick-colour"><muon-cta icon="arrow-left">Previous</muon-cta></LinkTo>
  <LinkTo @route="order.configurator.pick-occasion"><muon-cta>Next</muon-cta></LinkTo>